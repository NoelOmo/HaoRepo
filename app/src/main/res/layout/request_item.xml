<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardElevation="1dp"
    app:cardCornerRadius="4dp"
    card_view:cardElevation="0dp"

    android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/rectfb"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="4dp"
                android:paddingStart="4dp"
                android:orientation="vertical">
                <ke.co.noel.hao.customfonts.MyBoldTextView
                    android:id="@+id/requester_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: John Does\n"/>
                <ke.co.noel.hao.customfonts.MyBoldTextView
                    android:id="@+id/requester_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: john@hao.co.ke\n"/>
                <ke.co.noel.hao.customfonts.MyBoldTextView
                    android:id="@+id/requester_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Phone: 1234567891\n"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:orientation="vertical">

            <ke.co.noel.hao.customfonts.MyBoldTextView
                android:id="@+id/room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room type\n Single\n"/>

            <ke.co.noel.hao.customfonts.MyBoldTextView
                android:id="@+id/request_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length of stay\n 1 day(s).\n"/>


            <ke.co.noel.hao.customfonts.MyBoldTextView
                android:id="@+id/special_requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Requirements\n ABC are my special requirements. Have them sorted.\n"/>

            <Button
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/deep_purple"
                android:layout_margin="2dp"
                android:text="Accept" />

            <Button
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="Decline" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>